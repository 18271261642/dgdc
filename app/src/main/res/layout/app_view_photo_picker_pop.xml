<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view_choose_hide"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:alpha="0.4"
            android:background="@color/transparent" />

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_btn_white_20_bg"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_photograph"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/choose_from_album"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/sp18" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:background="@color/common_pop_bg"
                />


            <TextView
                android:id="@+id/tv_camera"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/camera"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/sp18" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/common_pop_bg"
                android:layout_marginLeft="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"/>

            <TextView
                android:id="@+id/tv_choose_cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onCancelClick"
                android:text="@string/dialog_cancel"
                android:textColor="#BBBBBB"
                android:textSize="@dimen/sp18" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
