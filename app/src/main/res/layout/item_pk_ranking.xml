<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp45"
    android:gravity="center"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="0.5"></View>

    <TextView
        android:id="@+id/tv_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14"
        android:textStyle="bold"></TextView>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"></View>

    <com.jkcq.viewlibrary.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/friend_icon_default_photo" />


    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="@dimen/dp45"
        android:layout_marginLeft="@dimen/dp10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:ellipsize="middle"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp3"
            android:text="Connor Osborne"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12"></TextView>

        <View
            android:id="@+id/view_ceter"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"></View>

        <TextView
            android:id="@+id/tv_dis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_ceter"
            android:layout_marginBottom="@dimen/dp3"
            android:text="306km"
            android:textColor="@color/white"
            android:textSize="@dimen/sp10"></TextView>

        <TextView
            android:id="@+id/tv_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_ceter"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp3"
            android:textColor="@color/common_view_color"
            android:textSize="@dimen/sp10"></TextView>
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"></View>

    <ImageView
        android:id="@+id/iv_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_pk_gift" />


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="0.5"></View>
</LinearLayout>

